#
# G800設定ファイル
#

# エミュレートされるマシン
machine	g850
#machine	g815
#machine	e200

# ROMイメージのあるディレクトリ
rom_dir	

# RAMファイルパス名
ram_path	~/.g800user.txt

# IOCSをエミュレートするか
emulate_iocs

# プロファイラ
prof	n

# CPUクロック周波数(kHz)
clock	

# I/O更新周期(Hz)
refresh	60

# LCD
zoom	3
lcd_back	cceebb
lcd_off	aaddbb
lcd_on	002211

# LCDの階調数
lcd_scales	2

# キーボード
keyboard	jp

# キー割り当て
basic	f1
text	f2
const	^o
ans	^a
off	escape
on	pause
2ndf	rshift
sin	^s
cos	^c
tan	^t
fe	^f	# F<->Eキー
cls	home
npr	^n	# nPrキー
deg	^d	# ->DEGキー
ln	^l
log	^g
rcp	^i	# 1/xキー
mdf	^m
pi	^p	# πキー
sqr	^r	# √キー
squ	^q	# x^2キー
m+	^return
rcm	^-	# R・CMキー
capslock	capslock
shift	lshift
kana	lalt	# カナキー
delete	delete
degree	+d	# °
minute	+m	# ′
second	+s	# ″
!	+1
"	+2
hash	+3
$	+4
%	+5
'	+7
&	+6
(	+8
)	+9
*	+:
+	+;
:	:
<	+,
equal	+-
>	+.
?	+/
@	@
[	[
\	yen
]	]
_	_
{	+[
|	+yen
}	+]
~	+^
reset	f8
menu	f4
copy	^x	# 計算結果をクリップボードにコピーする
paste	^v	# クリップボードの内容をキー入力する
trace
11pin1		# 端子番号4 BUSY
11pin2		# 端子番号5 Dout
11pin3	f5	# 端子番号6 Xin
11pin4		# 端子番号7 Xout
11pin5	f6	# 端子番号8 Din
11pin6	f7	# 端子番号9 ACK
11pin7		# 端子番号10
11pin8		# 端子番号11

# 「閉じる」をOFFキーとして扱う
close_as_off	n

# ソフトウェアキーを使うか
software_key	n

# ブザーを使うか
buzzer	y

# ファイルフィルタを使用するか
file_filter	y

# ジョイスティック
use_joy	y
